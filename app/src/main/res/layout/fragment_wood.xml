<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <!--
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Wood Filter"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>
    -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TableRow
                android:id="@+id/woodTableRowSurfaceTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="surface"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:id="@+id/woodSurfaceText"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow
                android:id="@+id/woodTableRowSurface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:gravity="center">

                <Button
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border_unselected"
                    android:text="smooth"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/woodSmooth" />

                <Button
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border_unselected"
                    android:text="rough"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/woodRough" />

                <Button
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border_unselected"
                    android:text="super rough"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/woodSuperRough" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_span="3" />
            </TableRow>

            <TableRow
                android:id="@+id/woodTableRowGrainTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="grain"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:id="@+id/woodGrainText"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow
                android:id="@+id/woodTableRowGrain"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border_unselected"
                    android:src="@drawable/ic_launcher"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:layout_margin="5dp"
                    android:id="@+id/woodNoGrain" />

                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border_unselected"
                    android:src="@drawable/ic_launcher"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:layout_margin="5dp"
                    android:id="@+id/woodSmallGrain" />

                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border_unselected"
                    android:src="@drawable/ic_launcher"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:layout_margin="5dp"
                    android:id="@+id/woodMediumGrain" />

            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>